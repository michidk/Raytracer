<Window x:Class="Raytracer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Raytracer"
        mc:Ignorable="d"
        Title="Raytracer" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <Button Grid.Row="0" x:Name="UpdateButton" Content="Update" Height="30" Width="180" Click="OnUpdateButtonPressed" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <Image Grid.Row="1" x:Name="RenderOutput" Stretch="Fill" />
        <ProgressBar x:Name="ProgressBar" Grid.Row="2"/>
    </Grid>
</Window>
